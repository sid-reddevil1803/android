<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/top_news_card"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="10dp"
    android:background="#ffffff"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/top_part"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:background="#dedede"
            android:weightSum="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/iv_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#dedede"
                    android:alpha="0.5"
                    android:src="@mipmap/share"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">
                <ImageButton
                    android:id="@+id/iv_going"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#dedede"
                    android:src="@mipmap/going"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.3">

            <ImageView
                android:id="@+id/iv_event_photo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/dance">

            </ImageView>
            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:gravity="center"
                android:background="#f6b051">
                <TextView
                    android:id="@+id/tv_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="SAT"
                    android:textSize="19sp"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/tv_date_month"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="19 Dec"
                    android:textSize="14sp"
                    android:layout_below="@+id/tv_day"
                    android:textColor="#ffffff"/>
                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="10:00 AM"
                    android:textSize="12sp"
                    android:layout_below="@+id/tv_date_month"
                    android:textColor="#ffffff"/>
                <ImageView
                    android:id="@+id/iv_news_icon"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/news_icon"/>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>
        <RelativeLayout
            android:id="@+id/bottom_part"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_part"
            android:padding="12dp"
            android:background="#c9c9c9">
            <com.google.cloud.samples.campusconnect.CircularImageView
                android:id="@+id/group_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/coder"
                android:layout_alignParentLeft="true"
                app:border_color="#FFFFFF"
                app:border_width="2dp" />
            <TextView
                android:id="@+id/tv_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/group_image"
                android:layout_marginLeft="16dp"
                android:text="Classical Dance Performance"
                android:textColor="#000000"
                android:alpha="0.87"
                android:gravity="right"
                android:textSize="18sp"/>
            <TextView
                android:id="@+id/tv_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_event"
                android:layout_toRightOf="@id/group_image"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:alpha="0.65"
                android:text="Rotaract Club"
                android:gravity="right"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/tv_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_group"
                android:layout_toRightOf="@id/group_image"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:alpha="0.5"
                android:text="10 mins ago"
                android:gravity="right"
                android:textSize="14sp"/>
        </RelativeLayout>
    </RelativeLayout>

 </android.support.v7.widget.CardView>